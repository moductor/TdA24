---
type Props = {
  portrait: string;
  [prop: string]: any;
};

const { portrait, ...props } = Astro.props;
---

<img src={portrait} alt="" {...props} />

<style lang="scss">
  img {
    aspect-ratio: 5 / 4;
    width: 100%;
    object-fit: cover;
    box-shadow: var(--card-shadow);
    border-radius: var(--card-border-radius);

    @media (min-width: 720px) {
      aspect-ratio: 16 / 9;
    }

    @media (min-width: 1200px) {
      aspect-ratio: 1;
    }
  }
</style>
