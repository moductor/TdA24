---
import type { Tag as TagModel } from "../../../models/Tag";

import Card from "../../widgets/Card.astro";
import Tag from "../../widgets/Tag.astro";

type Props = {
  tags: TagModel[];
  [prop: string]: any;
};

const { tags, ...props } = Astro.props;
---

<Card {...props}>
  <section>
    <h2 class="visually-hidden">Zaměření</h2>
    <ul>
      {
        tags.map((tag) => (
          <li>
            <Tag class="background-sky-blue text-jet">{tag.name}</Tag>
          </li>
        ))
      }
    </ul>
  </section>
</Card>

<style lang="scss">
  ul {
    list-style-type: none;
    display: flex;
    gap: 0.6em;
    flex-wrap: wrap;
    justify-content: center;

    @media (max-width: 720px) {
      flex-direction: column;
      justify-items: stretch;
      text-align: center;
    }
  }
</style>
