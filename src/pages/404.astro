---
import Layout from "../layout/Layout.astro";
---

<Layout>
  <h1 class="title">404</h1>
  <p>Tudy cesta nevede!</p>
  <a href="/">zpět na úvodní stránku</a>
</Layout>

<style>
  body {
    min-height: 100vh;
    display: grid;
    place-content: center;
    text-align: center;
  }

  h1 {
    font-size: 8rem;
    line-height: 1;
    color: transparent;
    -webkit-text-stroke: 2px hsl(0 0% 50%);

    z-index: -1;
    opacity: 0.4;
  }

  p {
    font-size: 1.5rem;
    font-weight: 700;
  }

  a {
    margin-block-start: 1rem;

    display: block;
    color: currentColor;
    text-decoration: none;

    padding: 0.4em 0.6em;
    border: 2px solid hsl(0 0% 50% / 40%);
    border-radius: 0.4em;
  }
</style>
